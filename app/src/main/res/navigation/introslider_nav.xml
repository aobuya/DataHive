<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introslider_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.datahive.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPager"
            app:destination="@id/viewPager"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_viewPager_to_SignupFragment"
            app:destination="@id/SignupFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPager"
        android:name="com.example.datahive.introslider.ViewPager"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPager_to_SignupFragment"
            app:destination="@id/SignupFragment"
            app:popUpTo="@id/viewPager"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/SignupFragment"
        android:name="com.example.datahive.introslider.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/activity_signup" />
</navigation>