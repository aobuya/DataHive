<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".holder.NavUsage"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln1"
        android:layout_marginTop="?attr/actionBarSize">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:fontFamily="@font/asap_variablefont_wdthwght"
            android:text="@string/top_apps"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/date_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"

                android:entries="@array/date_options" />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/connectivity_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"

                android:entries="@array/connectivity_option" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            tools:listitem="@layout/app_data_usage_item"
            android:layout_height="match_parent" />


    </LinearLayout>

</RelativeLayout>