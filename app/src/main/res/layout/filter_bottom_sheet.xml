<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Network Type textview -->
    <TextView
        android:id="@+id/network_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Type"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.3" />

    <!-- Wifi button -->
    <Button
        android:id="@+id/wifi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"

        app:layout_constraintTop_toBottomOf="@+id/network_type_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/data_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Data button -->
    <Button
        android:id="@+id/data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        app:layout_constraintTop_toBottomOf="@+id/network_type_textview"
        app:layout_constraintStart_toEndOf="@+id/wifi_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Apps textview -->
    <TextView
        android:id="@+id/apps_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apps"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/data_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.3" />

    <!-- System apps button -->
    <Button
        android:id="@+id/system_apps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Apps"
        app:layout_constraintTop_toBottomOf="@+id/apps_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/installed_apps_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Installed apps button -->
    <Button
        android:id="@+id/installed_apps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Installed Apps"
        app:layout_constraintTop_toBottomOf="@+id/apps_textview"
        app:layout_constraintStart_toEndOf="@+id/system_apps_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>