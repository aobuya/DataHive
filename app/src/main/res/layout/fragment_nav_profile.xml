<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".holder.NavProfile">

    <include layout="@layout/toolbar" />
    <ImageView
        android:id="@+id/lobby_screen_header"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/hive"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <TextView
        android:id="@+id/lobby_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <TextView
        android:id="@+id/lobby_screen_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:gravity="center"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sign_out"
        android:textStyle="bold"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <TextView
        android:id="@+id/pass_redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap_italic_variablefont_wdth_wght"
        android:text="@string/report_tag"
        android:textSize="17sp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"/>

</LinearLayout>