<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".holder.NavDashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln1"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:fontFamily="@font/asap_variablefont_wdthwght"
            android:text="@string/top_apps"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/ln1"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/linearLayout_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="2dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:background="@color/bee_yellow"
                            android:textColor="@color/black"
                            android:maxEms="20"
                            android:text="@string/totals"
                            android:padding="5dp"
                            />

                        <TextView
                            android:id="@+id/mobile_data_this_month_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:maxEms="20"
                            android:text="@string/total_mobile"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:padding="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/wifi_data_this_month_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:text="@string/wifi_total"
                            android:padding="5dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"

                        android:layout_marginBottom="2dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:background="@color/bee_yellow"
                            android:textColor="@color/black"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/last_30_days"
                            />

                        <TextView
                            android:id="@+id/mobile_data_this_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/wifi_data_this_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/dash_bg"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:id="@+id/totalSpeedTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/purple_500"
                                    android:textSize="7sp"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:id="@+id/dataUsagesTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="Data: 0 Kib"
                                    android:textColor="@color/purple_500"
                                    android:fontFamily="@font/asap_variablefont_wdthwght"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/downUsagesTv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/asap_variablefont_wdthwght"
                                android:text="15kb"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/wifiUsagesTv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/asap_variablefont_wdthwght"
                                android:maxLines="1"
                                android:text="WiFi: 0 Kib"
                                android:textColor="@color/purple_500"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights" />


                            <TextView
                                android:id="@+id/upUsagesTv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/asap_variablefont_wdthwght"
                                android:text="15kb"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/full_month_data_usages"
                        android:fontFamily="@font/asap_variablefont_wdthwght"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:background="@color/bee_yellow"
                            android:textColor="@color/black"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="Date"
                             />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/bee_yellow"
                            android:textColor="@color/black"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/mobile"
                            />

                        <TextView
                            android:id="@+id/wifi_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@color/bee_yellow"
                            android:textColor="@color/black"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/wifi"
                             />

                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monthlyDataUsagesRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        tools:listitem="@layout/item_daily_usage" />

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>



</RelativeLayout>
