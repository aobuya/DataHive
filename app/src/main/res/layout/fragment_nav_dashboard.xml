<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".holder.NavDashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dashboard_AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/seed"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            style="?attr/collapsingToolbarLayoutMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/collapsingToolbarLayoutMediumSize"
            app:expandedTitleGravity="bottom"
            app:layout_collapseMode="pin"
            android:background="@color/seed"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/chat_TopAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                android:background="@color/seed"
                app:title="@string/app_name"
                app:titleTextAppearance="?attr/textAppearanceTitleLarge" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln1"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            ads:adSize="BANNER"
                            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/totals"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/mobile_data_this_month_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/total_mobile"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/wifi_data_this_month_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/wifi_total"
                            android:textColor="@color/md_theme_light_scrim" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/last_30_days"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/mobile_data_this_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/wifi_data_this_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/usages_dash_color"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:textColor="@color/md_theme_light_scrim" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/asap_variablefont_wdthwght"
                        android:text="@string/today_data_usage"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="@color/md_theme_light_onSurface" />


                    <TextView
                        android:id="@+id/totalSpeedTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="@color/md_theme_light_onSurface"
                        tools:ignore="SmallSp,Suspicious0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            style="?attr/materialCardViewFilledStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/wifi" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/wifiUsagesTv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/asap_variablefont_wdthwght"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:padding="6dp"
                                        android:text="WiFi: 0 Kib"
                                        android:textAppearance="?attr/textAppearanceTitleMedium"
                                        android:textColor="@color/md_theme_light_onSurface"
                                        tools:ignore="NestedWeights" />

                                    <TextView
                                        android:id="@+id/upUsagesTv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/asap_variablefont_wdthwght"
                                        android:gravity="center_vertical"
                                        android:padding="6dp"
                                        android:text="15kb"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                </LinearLayout>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            style="?attr/materialCardViewFilledStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/mobile_data" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/dataUsagesTv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/asap_variablefont_wdthwght"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:padding="6dp"
                                        android:text="Data: 0 Kib"
                                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                                    <TextView
                                        android:id="@+id/downUsagesTv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/asap_variablefont_wdthwght"
                                        android:gravity="center_vertical"
                                        android:padding="6dp"
                                        android:text="15kb"
                                        android:textAppearance="?attr/textAppearanceTitleSmall"
                                        android:textColor="@color/md_theme_light_onSurface" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/asap_variablefont_wdthwght"
                        android:text="@string/full_month_data_usages"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="@color/md_theme_light_onSurface" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="Date"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/mobile"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/wifi_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:fontFamily="@font/asap_variablefont_wdthwght"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/wifi"
                            android:textColor="@color/md_theme_light_scrim" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monthlyDataUsagesRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        tools:listitem="@layout/item_daily_usage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            ads:adSize="BANNER"
                            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
