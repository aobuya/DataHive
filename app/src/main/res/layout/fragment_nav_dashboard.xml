<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".holder.NavDashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dashboard_AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            style="?attr/collapsingToolbarLayoutMediumStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/collapsingToolbarLayoutMediumSize"
            app:expandedTitleGravity="bottom"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/dashboard_topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/menu_hamburger"
                app:title="@string/app_name"
                app:titleTextAppearance="?attr/textAppearanceTitleLarge"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln1"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--Ad unit here-->
                        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            ads:adSize="BANNER"
                            ads:adUnitId="ca-app-pub-4108486324709922/6635368878" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/today_data_usage"
                        android:textSize="15dp"
                         />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_margin="8dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardCornerRadius="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/baseline_wifi_24"
                                            android:scaleType="centerCrop"
                                            android:adjustViewBounds="true" />

                                        <TextView
                                            android:id="@+id/wifi_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="WiFi"
                                            />
                                        <TextView
                                            android:id="@+id/wifiUsagesTv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="0 Kib"
                                             />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_margin="8dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardCornerRadius="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/mobile_data"

                                            android:scaleType="centerCrop"
                                            android:adjustViewBounds="true" />

                                        <TextView
                                            android:id="@+id/data_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="Mobile"
                                            />
                                        <TextView
                                            android:id="@+id/dataUsagesTv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:maxLines="1"
                                            android:text="0 Kib" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"

                        android:layout_marginEnd="20dp"

                        android:text="Last 7 days"
                        android:textSize="15dp"
                         />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_margin="8dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardCornerRadius="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/baseline_wifi_24"
                                            android:scaleType="centerCrop"

                                            android:adjustViewBounds="true" />
                                        <TextView
                                            android:text="WiFi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                        <TextView
                                            android:id="@+id/last_7_days_wifi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_margin="8dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardCornerRadius="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"

                                            android:src="@drawable/mobile_data"
                                            android:scaleType="centerCrop"
                                            android:adjustViewBounds="true" />
                                        <TextView
                                            android:text="Mobile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            />

                                        <TextView
                                            android:id="@+id/last_7_days_mobile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_text_grey"

                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/totals"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/mobile_data_this_month_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_text"

                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/total_mobile"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/wifi_data_this_month_top"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_text"

                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/wifi_total"
                            android:textColor="@color/md_theme_light_scrim" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_text_grey"

                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/last_30_days"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/mobile_data_this_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_text"

                            android:maxEms="20"
                            android:padding="5dp"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/wifi_data_this_month"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_text"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:textColor="@color/md_theme_light_scrim" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="@string/full_month_data_usages"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="Date"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/mobile"
                            android:textColor="@color/md_theme_light_scrim" />

                        <TextView
                            android:id="@+id/wifi_data"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@color/seed"
                            android:maxEms="20"
                            android:padding="5dp"
                            android:text="@string/wifi"
                            android:textColor="@color/md_theme_light_scrim" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monthlyDataUsagesRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        tools:listitem="@layout/item_daily_usage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--Ad unit here-->
                        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            ads:adSize="BANNER"
                            ads:adUnitId="ca-app-pub-4108486324709922/7581387528" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>